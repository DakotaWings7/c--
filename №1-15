// №13 Частотный анализатор
#include<iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	printf("Введите число n: ");
	int n;
	scanf_s("%d", &n);

	int arr[] = { 0 };
	int count, reserve = n, number, g, i = 0;
	while (reserve > 0) {
		count = 1;
		number = reserve % 10;
		arr[i] = number;
		if(arr[i] != arr[i-1]){
			g = reserve / 10;
			while (g > 0) {
				if (g % 10 == number) {
					count += 1;
					g /= 10;
				}
				else
					g /= 10;
			}
			printf("%s" "%d" "%s" "%d" "%s", "Количество цифр '", number, "' - ", count, "\n");
		}
		reserve /= 10;
		i += 1;
	}
	return 0;
}


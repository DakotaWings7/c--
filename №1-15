// №15 дан целочисленный массив, С 
#include<iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	printf("Введите число С: ");
	int C;
	scanf_s("%d", &C);

	const int n = 5;
	printf("%s" "%d" "%s", "Введите массив длинной - ", n, "\n");
	int arr[] = { 0 };
	for (int i = 0; i < n; i++) {
		scanf_s("%d", &arr[i]);
	}

	bool F = 0;
	int place;

	for (int i = 0; i < n; i++) {
		if (arr[i] == C) {
			F = 1;
			place = i;
			i = n;
		}
	}

	if (F)
		printf("%s" "%d", "Номер элемента, равного C - ", place);
	else
		printf("Линейный поиск");
}

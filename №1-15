// №3 n! или n^k
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");

	printf("Введите число n: ");
	int n, k, M = 1, i = 1;
	scanf_s("%d", &n);

	if (n < 10) {
		for (int i = 0; i < n; i++) {
			M *= n - i;
		}
	}
	else {
		printf("Введите степень, в которую хотите возвести число: ");
		scanf_s("%d", &k);
		for (int i = 0; i < k; i++) {
			M *= n;
		}
	}

	printf("%d", M);
}


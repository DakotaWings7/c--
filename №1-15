// №10 (ДОДЕЛАТЬ <убрать нули>)знакочередующийся ряд или нет
#include<iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "ru");

	bool F = 0;
	const int n = 5;
	printf("%s" "%d" "%s", "Введите массив длиной - ", n, "\n");
	int arr[] = { 0 };
	for (int i = 0; i < n; i++) {
		scanf_s("%d", &arr[i]);
	}
	int i = 0;
	while (i < len_arr - 1) {
		if (arr[i] < 0)
			if (arr[i + 1] > 0) {
				i++;
				F = 1;
			}
			else {
				F = 0;
				i = len_arr;
			}
		else
			if (arr[i + 1] < 0) {
				i++;
				F = 1;
			}
			else {
				F = 0;
				i = len_arr;
			}
	}
	if (F)
		printf("Ряд - знакочередующийся \n");
	else
		printf("Ряд - не знакочередующийся \n");
	
	return 0;
}


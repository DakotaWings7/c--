// №2 палиндром
#include <iostream>
using namespace std;

int reverse_number(int number)
{
    int n = 0;
    while (number) {
        n = 10 * n + number % 10;
        number /= 10;
    }
    return n;
}

int main() {
    setlocale(LC_ALL, "rus");
    printf("Введите число: ");
    int number = 0;
    scanf_s("%d", &number);
    if (number == reverse_number(number)) {
        printf("Число " "%d", number);
        printf(" является палиндромом\n");
    }
    else {
        printf("Число ""%d", number);
        printf(" не является палиндромом\n");
    }
    system("Pause");
    return 0;
}


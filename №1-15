// №6 Определить является ли n степенью 2
#include<iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	printf("Введите число n: ");
	int n;
	scanf_s("%d", &n);

	bool F = 0;
	for (int i = 0; i < 100; i++) {
		while (pow(2, i) <= n) {
			if (pow(2, i) == n) {
				F = 1;
				i = 100;
			}
			else
				i++;
		}
	}

	if (F) {
		printf("%s" "%d" "%s", "Число ", n, " является степенью 2");
	}
	else
		printf("%s" "%d" "%s", "Число ", n, " не является степенью 2");
}

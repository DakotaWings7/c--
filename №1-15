// №12 упорядочена ли по возрастанию
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
	const int n = 5;
	printf("%s" "%d" "%s", "Введите массив длиной - ", n, "\n");
	int arr[] = { 0 };
	for (int i = 0; i < n; i++) {
		scanf_s("%d", &arr[i]);
	}

	bool F = 0;

	for (int i = 0; i < n - 1; i++) {
		if (arr[i] < arr[i + 1]) {
			F = 1;
		}
		else {
			F = 0;
			i = n;
		}
	}

	if (F)
		printf("Последовательность строго возрастающая");
	else
		printf("Последовательность не строго возрастающая");
}




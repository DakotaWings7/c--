// №9 есть ли хотя бы одна цифра 9 
#include<iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	printf("Введите число n: ");
	int n;
	scanf_s("%d", &n);

	int number = n;
	bool F = 0;
	while (number > 0) {
		if (number % 10 == 9) {
			F = 1;
			number = 0;
		}
		else
			number /= 10;
	}

	if(F)
		printf("%s" "%d" "%s", "В числе ", n, " есть хотя бы одна цифра 9");
	else
		printf("%s" "%d" "%s", "В числе ", n, " нет цифр 9");
}

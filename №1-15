// №4 максимальный элемент четный
#include<iostream>
using namespace std;

int main() 
{
	setlocale(LC_ALL, "rus");
	const int n = 5;
	printf("%s" "%d" "%s", "Введите массив длиной - ", n, "\n");
	int arr[] = { 0 };
	for(int i = 0; i < n; i++){
		scanf_s("%d", &arr[i]);
	}

	int max = 0;

	for (int i = 0; i < n - 1; i++) {
		if (arr[i] > max)
			max = arr[i];
	}
	
	printf("%d" "%s", max, "\n");

	if (max % 2 == 0)
		printf("Максимальный элемент четный");
	else
		printf("Максимальный элемент нечетный");
}


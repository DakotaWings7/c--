// №5 сумма чисел оканч цифрой 5
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
	const int n = 5;
	printf("%s" "%d" "%s", "Введите массив длиной - ", n, "\n");
	int arr[] = { 0 };
	for (int i = 0; i < n; i++) {
		scanf_s("%d", &arr[i]);
	}
	
	int sum = 0;

	for(int i = 0; i < n; i++){
		if (arr[i] % 10 == 5) {
			sum += arr[i];
		}
	}

	if (sum == 0)
		printf("Чисел, оканчивающихся на 5 нет");
	else
		printf("%s" "%d","Сумма чисел, оканчивающихся на 5: ", sum);
}

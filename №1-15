// №11 разменять местами макс и мин эл
#include<iostream>	
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	const int n = 5;
	printf("%s" "%d" "%s", "Введите массив длиной - ", n, "\n");
	int arr[] = { 0 };
	for (int i = 0; i < n; i++) {
		scanf_s("%d", &arr[i]);
	}
	
	int max = arr[0], min = arr[0];
	int min_place, max_place;

	for (int i = 0; i < n; i++) {
		if (arr[i] >= max){
			max = arr[i];
			max_place = i;
		}
	}
	for (int i = 0; i < n; i++) {
		if (arr[i] <= min){
			min = arr[i];
			min_place = i;
		}
	}

	int reserve;

	reserve = arr[min_place];
	arr[min_place] = arr[max_place];
	arr[max_place] = reserve;
	
	for (int i = 0; i < n; i++) {
		printf("%d" "%s", arr[i], " ");
	}
}

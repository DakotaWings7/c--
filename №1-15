// №7 минимальное отрицательное число
#include<iostream>	
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	const int n = 5;
	printf("%s" "%d" "%s", "Введите массив длиной - ", n, "\n");
	int arr[] = { 0 };
	for (int i = 0; i < n; i++) {
		scanf_s("%d", &arr[i]);
	}

	int min = x[0], number = 0;
	int i = 0;
	while (i < n) {
		if (x[i] < 0) {
			if (x[i] < min) {
				min = x[i];
				number = i;
				i++;
			}
			else
				i++;
		}
		else
			i++;
	}
	if (min > 0)
		printf("Отрицательных чисел нет");
	else {
		printf("Минимальное отрицательное число: " "%d", min);
		printf("\nЕго порядковый номер: " "%d", number);
	}
}


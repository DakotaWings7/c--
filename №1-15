// №8 является ли n простым
#include<iostream>
using namespace std;

int main() {
	setlocale(LC_ALL, "rus");
	printf("Введите число n: ");
	int n, count = 1;
	scanf_s("%d", &n);

	bool F = 0;
	for (int i = 2; i < n / 2; i++) {
		if (n % i == 0) {
			F = 1;
			i = n;
		}
		else
			F = 0;
	}
	
	if (F)
		printf("%s" "%d" "%s", "Число ", n, " не является простым");
	else
		printf("%s" "%d" "%s", "Число ", n, " является простым");
	
}


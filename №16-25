// №18b Транспонирование
#include<iostream>
using namespace std;

void N_18_b(int** a, int n, int m) {
	int** temp = memory_allocation(n, n);
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			temp[i][j] = a[i][j];
		}
	}
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++)
			a[i][j] = temp[j][i];
	}
}
int main() {
	int n = 2;
	int** a = memory_allocation(n, n);
	Fill_array(a, n, n);
	printf("\n");
	Print_array(a, n, n);

	N_18_b(a, n, n);

	printf("\n");
	Print_array(a, n, n);

	delete_Array(a, n, n);
}
